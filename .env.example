# ===========================================
# Learning Hall Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/learninghall

# Redis (for BullMQ job queues)
REDIS_URL=redis://localhost:6379

# NextAuth.js
NEXTAUTH_SECRET=your-nextauth-secret-here-generate-with-openssl-rand-base64-32
NEXTAUTH_URL=http://localhost:3000

# Payload CMS
PAYLOAD_SECRET=your-payload-secret-here-generate-with-openssl-rand-base64-32

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Storage Encryption (for BYOS credentials)
# Generate with: openssl rand -hex 32
STORAGE_ENCRYPTION_KEY=your-32-byte-hex-key-for-encrypting-storage-credentials

# Default Platform Storage (used when tenant has no BYOS config)
DEFAULT_STORAGE_PROVIDER=r2
DEFAULT_STORAGE_BUCKET=learning-hall-default
DEFAULT_STORAGE_REGION=auto
DEFAULT_STORAGE_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
DEFAULT_STORAGE_ACCESS_KEY=your-r2-access-key
DEFAULT_STORAGE_SECRET_KEY=your-r2-secret-key

# Email (Resend)
RESEND_API_KEY=re_your_resend_api_key

# Public URL
NEXT_PUBLIC_URL=http://localhost:3000

# Optional: OAuth Providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
